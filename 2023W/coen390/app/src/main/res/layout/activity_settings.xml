<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/hydromind_5"
        android:layout_alignParentTop="true"
        android:maxWidth="180dp"
        android:adjustViewBounds="true"
        android:id="@+id/hydroMind"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito"
        android:layout_below="@id/hydroMind"
        android:text="@string/account_information"
        android:textColor="#000000"
        android:layout_marginStart="40dp"
        android:textSize="20sp" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="15dp"
        android:id="@+id/profileIcon"
        android:layout_below="@id/info"
        android:background="@drawable/ic_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullName"
        android:fontFamily="@font/nunito"
        android:textColor="#000000"
        android:hint="@string/loading"
        android:layout_toEndOf="@id/profileIcon"
        android:layout_alignBottom="@id/profileIcon"
        android:layout_alignTop="@id/profileIcon"
        android:layout_below="@id/info"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/fullName"
        android:id="@+id/emailIcon"
        android:background="@drawable/ic_email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/fullName"
        android:fontFamily="@font/nunito"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_toEndOf="@id/emailIcon"
        android:hint="@string/loading"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#66BA0000"
        android:text="SIGN OUT" />

</RelativeLayout>